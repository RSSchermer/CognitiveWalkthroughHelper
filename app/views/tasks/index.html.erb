<h1>Listing tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Actions</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= link_to task.user_actions.count, task_user_actions_path(task) %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_walkthrough_task_path(@walkthrough) %>
<%= link_to 'Back', walkthroughs_path %>
